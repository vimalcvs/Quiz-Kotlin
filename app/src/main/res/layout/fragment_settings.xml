<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_4"
                    app:cardBackgroundColor="@color/color_card"
                    app:cardCornerRadius="@dimen/dp_16"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:fontFamily="@font/font_medium"
                            android:includeFontPadding="false"
                            android:text="@string/setting_custom"
                            android:textColor="@color/color_icon"
                            android:textSize="@dimen/sp_14" />


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/setting_appearance_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?selectableItemBackground"
                            android:minHeight="@dimen/dp_52"
                            android:paddingStart="@dimen/dp_20"
                            android:paddingEnd="@dimen/dp_20">

                            <ImageView
                                android:layout_width="@dimen/dp_22"
                                android:layout_height="@dimen/dp_22"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_setting_dark"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/dateformat_tv"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_36"
                                android:fontFamily="@font/font_regular"
                                android:includeFontPadding="false"
                                android:text="@string/setting_dark_night"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/sp_15"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_chainStyle="packed" />


                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/setting_reminder_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?selectableItemBackground"
                            android:minHeight="@dimen/dp_64"
                            android:paddingStart="@dimen/dp_20"
                            android:paddingEnd="@dimen/dp_20"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="@dimen/dp_22"
                                android:layout_height="@dimen/dp_22"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_setting_reminder"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/reminder_tv"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_36"
                                android:fontFamily="@font/font_regular"
                                android:includeFontPadding="false"
                                android:text="@string/setting_reminder"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/sp_15"
                                app:layout_constraintBottom_toTopOf="@+id/reminder_tv_des"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_chainStyle="packed" />

                            <TextView
                                android:id="@+id/reminder_tv_des"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_36"
                                android:layout_marginTop="@dimen/dp_4"
                                android:fontFamily="@font/font_regular"
                                android:includeFontPadding="false"
                                android:text="@string/setting_reminder_des"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text_third"
                                android:textSize="@dimen/sp_12"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/reminder_tv" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_8" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_4"
                    app:cardBackgroundColor="@color/color_card"
                    app:cardCornerRadius="@dimen/dp_16"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:fontFamily="@font/font_medium"
                            android:includeFontPadding="false"
                            android:text="@string/setting_about_us"
                            android:textColor="@color/color_icon"
                            android:textSize="@dimen/sp_14" />


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/setting_rateus_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?selectableItemBackground"
                            android:minHeight="@dimen/dp_52"
                            android:paddingStart="@dimen/dp_20"
                            android:paddingEnd="@dimen/dp_20">

                            <ImageView
                                android:layout_width="@dimen/dp_22"
                                android:layout_height="@dimen/dp_22"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_setting_rateus"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_36"
                                android:fontFamily="@font/font_regular"
                                android:text="@string/setting_rate_us"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/sp_15"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/setting_feedback_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?selectableItemBackground"
                            android:minHeight="@dimen/dp_52"
                            android:paddingStart="@dimen/dp_20"
                            android:paddingEnd="@dimen/dp_20">

                            <ImageView
                                android:layout_width="@dimen/dp_22"
                                android:layout_height="@dimen/dp_22"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_setting_feedback"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_36"
                                android:fontFamily="@font/font_regular"
                                android:text="@string/setting_feedback"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/sp_15"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/setting_privacy_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?selectableItemBackground"
                            android:minHeight="@dimen/dp_52"
                            android:paddingStart="@dimen/dp_20"
                            android:paddingEnd="@dimen/dp_20">

                            <ImageView
                                android:layout_width="@dimen/dp_22"
                                android:layout_height="@dimen/dp_22"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_setting_privacy"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_36"
                                android:fontFamily="@font/font_regular"
                                android:text="@string/setting_privacy_policy"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/sp_15"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/setting_share_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?selectableItemBackground"
                            android:minHeight="@dimen/dp_52"
                            android:paddingStart="@dimen/dp_20"
                            android:paddingEnd="@dimen/dp_20">

                            <ImageView
                                android:layout_width="@dimen/dp_22"
                                android:layout_height="@dimen/dp_22"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_setting_shareapp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_36"
                                android:fontFamily="@font/font_regular"
                                android:text="@string/setting_share_app"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/sp_15"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/setting_version_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?selectableItemBackground"
                            android:minHeight="@dimen/dp_52"
                            android:paddingStart="@dimen/dp_20"
                            android:paddingEnd="@dimen/dp_20">

                            <ImageView
                                android:layout_width="@dimen/dp_22"
                                android:layout_height="@dimen/dp_22"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_setting_version"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_version_name"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_36"
                                android:fontFamily="@font/font_regular"
                                android:text="@string/version_name"
                                android:textAlignment="viewStart"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/sp_15"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>